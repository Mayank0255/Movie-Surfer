<%include partials/header %>


    <div class="container" style="height: 100vh; background-color: #001d26; padding-top: 12px; padding-bottom: 12px; padding-right: 20px;">
        <h1 class="header" style="text-align:center;">Sign Up</h1>
        <div class="formtab" style=" margin: 30px auto;">
            <form action="/register" method="POST">
                <div style="margin-bottom: 15px;" class="row">
                    <div class="col">
                        <input class="form-control" type="text" name="firstname" placeholder="First Name">
                    </div>
                    <div class="col">
                        <input class="form-control" type="text" name="lastname" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="Email Address">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Submit!</button>
                </div>
                <a class="acclink" style="color: #00c8ff;" href="/login">Already have an account?</a>
                <br>
                <a style="color: #00c8ff;" href="/index">Go Back</a>
            </form>
        </div>
    </div>


    <%include partials/footer %>